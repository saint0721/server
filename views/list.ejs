        <a href="/edit/<%= list[i]._id %>" style="font-size: 12px; margin-left: 5px;">ìˆ˜ì •</a>
        <span class="delete">ğŸ—‘ï¸</span>
      </h4>
    </div>
    <% } %>
  </div>

  <!-- delete mehtod -->
  <script>
    <% for (let i=0; i<list.length; i++) { %>
      document.querySelectorAll('.delete')['<%= i %>'].addEventListener('click', () => {
      fetch('/list/delete?docid=' + '<%= list[i]._id %>', {
        method : 'DELETE'
      })
    })
    <% } %>
  </script>

